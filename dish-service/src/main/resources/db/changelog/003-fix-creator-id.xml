<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="010-add-creator-id-nullable" author="library">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="items"/>
            <not>
                <columnExists tableName="items" columnName="creator_id"/>
            </not>
        </preConditions>

        <!-- Сначала добавляем колонку как NULLABLE -->
        <addColumn tableName="items">
            <column name="creator_id" type="BIGINT"/>
        </addColumn>

        <!-- Устанавливаем значение по умолчанию для существующих записей -->
        <update tableName="items">
            <column name="creator_id" value="1"/>
        </update>

        <!-- Добавляем внешний ключ -->
        <addForeignKeyConstraint
                baseTableName="items"
                baseColumnNames="creator_id"
                constraintName="fk_items_creator"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <!-- Теперь делаем колонку NOT NULL -->
        <addNotNullConstraint
                tableName="items"
                columnName="creator_id"
                columnDataType="BIGINT"/>
    </changeSet>

</databaseChangeLog>